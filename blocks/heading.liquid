{%- liquid
  assign heading_text = block.settings.text | strip
  assign heading_type = block.settings.type | default: 'h2'

  if heading_type == 'span'
    assign heading_class = 'heading-block heading-block--subheading'
  else
    assign heading_class = 'heading-block heading-block--' | append: heading_type
  endif
-%}

{% if heading_text != blank %}
    <{{ heading_type }} class="{{ heading_class }}" {{ block.shopify_attributes }}>{{ heading_text | escape }}</{{ heading_type }}>
{% endif %}

{% schema %}
{
  "name": "t:names.heading",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "t:settings.text",
      "default": "Heading"
    },
    {
      "type": "select",
      "id": "type",
      "label": "t:settings.heading_size",
      "options": [
        {
          "value": "h1",
          "label": "t:options.h1"
        },
        {
          "value": "h2",
          "label": "t:options.h2"
        },
        {
          "value": "h3",
          "label": "t:options.h3"
        },
        {
          "value": "h4",
          "label": "t:options.h4"
        },
        {
          "value": "h5",
          "label": "t:options.h5"
        },
        {
          "value": "h6",
          "label": "t:options.h6"
        },
        {
          "value": "span",
          "label": "t:options.subheading"
        }
      ],
      "default": "h2"
    }
  ],
  "presets": [
    {
      "name": "t:names.heading",
      "category": "t:categories.basic",
      "settings": {
        "text": "Heading",
        "type": "h2"
      }
    },
    {
      "name": "t:names.subheading",
      "category": "t:categories.basic",
      "settings": {
        "text": "Subheading",
        "type": "span"
      }
    }
  ]
}
{% endschema %}

